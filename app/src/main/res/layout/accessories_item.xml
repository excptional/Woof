<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_220sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemLayout_accessories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/light_cream"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/productImage_accessories"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/pet_food3" />

            <TextView
                android:id="@+id/productName_accessories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet accessories kharid lo please ekbar"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/material_black"
                android:textAlignment="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_margin="@dimen/_2sdp"
                android:ellipsize="end"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/lightest_red"
                android:layout_margin="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <TextView
                    android:id="@+id/productPrice_accessories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹499"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar_accessories"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/ratingText_accessories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="3.8"
                    android:layout_gravity="center"
                    android:textColor="@color/material_black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>