<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Woof" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_fade_orange</item>
        <item name="colorPrimaryVariant">@color/fade_cream</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightest_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cream</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonColor">
        <item name="colorPrimary">@color/lightest_purple</item>
        <item name="colorPrimaryVariant">#283593</item>

    </style>

    <style name="Theme.Woof.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>